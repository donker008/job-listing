
<div class="container-fluid">
  <%= render "comm/searchbar"%>
  <div class="filter_part">
    
  </div>
</div>
<div class="container-fluid">
  <div class="row filterbar">
    <div class="col-sm-2">
        排序方式：
        <%= link_to("默认", jobs_path({:order => "by_default"})%>
        <%= link_to("最新", jobs_path)%>
    </div>
    <div class="col-sm-10">
      月薪
      <div class="collapse navbar-collapse" id="bs-exmaple-nav">
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Sort <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to("by date", jobs_path)%>
              </li>
              <li>
                <%= link_to("by max salary", jobs_path(:order => 'by_max_salary'))%>
              </li>
                <li>
                  <%= link_to("by min salary", jobs_path(:order => 'by_min_salary'))%>
                </li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
<div class="container-fluid">
<table class="table">
<thead>

  <th>job</th>
  <th>description</th>
  <th>salary</th>
  <th>contact</th>
  <th>date</th>
</thead>
<tbody>
  <%= render :partial => "jobitem", :collection => @jobs , :as => :job  %>
</tbody>
</table>
</div>
<div class="row">

  <div class="flickr_pagination">
      <%= will_paginate @jobs, :container => false %>
  </div>
</div>
