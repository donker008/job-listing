<div class="job_company">
  <%= simple_form_for [:admin , @job] do |f| %>
    <div class="form-group">
      <%= f.input :title, input_html: {class: "form-control"}, label: '岗位名称', error:'Job name cant be empty' %>
      <%= f.input :description, input_html: {class: "from-control"}, label: '岗位描述' %>
      <%= f.input :work_place, input_html: {class: "from-control"} , label: '工作地点', :collection => @workplaces , :selected => 1%>
      <%= f.input :work_years, input_html: {class: "from-control"} , label: '工作经验' %>
      <%= f.input :education, input_html: {class: "from-control"} , label: '学历要求', collection:@academics, prompt:"选择学历", :selected => 1 %>
      <%= f.input :salaryMin, input_html: {class: "from-control"} , label: '薪资下限' %>
      <%= f.input :salaryMax, input_html: {class: "from-control"}, label: "薪资上限" %>
      <%= f.input :contact, input_html: {class: "from-control"}, label: '联系方式'%>
      <%= f.input :hide, input_html: {class: "from-control"}, label:"立即发布", as: :boolean%>
    </div>
    <%= f.submit "创建", class: "btn  btn-lg btn-danger btn_new_job", data: {disable_width: "提交中..."} %>
  <% end %>
</div>
